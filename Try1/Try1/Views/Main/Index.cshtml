@model Try1.Models.CombinedModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   @Html.ActionLink("Create New", "Create",null ,new {@class="btn btn-success" })
</p>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>

                        <tr>
                            <th> @Html.DisplayNameFor(model => model.ViewStudent.StudentName) </th>
                            <th> @Html.DisplayNameFor(model => model.ViewStudent.StudentAddress)</th>
                            <th>@Html.DisplayNameFor(model => model.ViewStudent.Email)</th>
                            <th> @Html.DisplayNameFor(model => model.ViewCourse.CourseName)</th>
                            <th>@Html.DisplayNameFor(model => model.ViewCourse.CoursePrice)</th>
                            <th>@Html.DisplayNameFor(model=>model.ViewEnroll.AplicablePrice)</th>
                            <th> @Html.DisplayNameFor(model => model.ViewInstallment.Paid)</th>
                            <th> Action</th>
                        </tr>
                        <tbody>
                           
                            @foreach (var item in Model.ViewListInstallment)
                            {
                                <tr>
                                
                                    <td>@Html.DisplayFor(model=>item.Enroll.Student.StudentName)</td>
                                    <td>@Html.DisplayFor(model=>item.Enroll.Student.StudentAddress)</td>
                                    <td>@Html.DisplayFor(model=>item.Enroll.Student.Email)</td>
                                    <td>@Html.DisplayFor(model=>item.Enroll.Course.CourseName)</td>
                                    <td>@Html.DisplayFor(model=>item.Enroll.Course.CoursePrice)</td>
                                    <td>@Html.DisplayFor(model=>item.Enroll.AplicablePrice)</td>
                                    <td>@Html.DisplayFor(model=>item.Paid )</td>
                                
                                
                                    
                                    <td>
             @*                           
             @Html.ActionLink("Edit", "Edit", new { id=item.Student.StudentId}, new{@class="btn btn-primary"}) 
            @Html.ActionLink("Details", "Details", new { id = item.Student.StudentId }, new {@class="btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Student.StudentId }, new  {@class="btn btn-warning" })
                   *@                 </td>
                                </tr>
                            }

                        </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>
