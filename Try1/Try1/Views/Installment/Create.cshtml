@model Try1.Models.Installment

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="card card-register mx-auto mt-5">
      <div class="card-header">Create a New Installment</div>
      <div class="card-body">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Installment</legend>
        <div class="form-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.EnrollmentId, "Enroll")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EnrollmentId", String.Empty)
            @Html.ValidationMessageFor(model => model.EnrollmentId)
        </div>
</div>
        <div class="form-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.Paid)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Paid)
            @Html.ValidationMessageFor(model => model.Paid)
        </div>
</div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}</div>
    </div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
