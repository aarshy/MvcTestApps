@model IEnumerable<Try1.Models.Enroll>

@{
    ViewBag.Title = "Enrolls";
    
}

<h2>Index</h2>

<p>
    
    @Html.ActionLink("Create New", "Create",null ,new {@class="btn btn-success" })
</p>

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>

                        <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObtainedCredit)
        </th>
        <th>
            Action
        </th>
    </tr>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObtainedCredit)
        </td>
        <td>
           
             @Html.ActionLink("Edit", "Edit", new { id=item.EnrollId }, new{@class="btn btn-primary"}) 
            @Html.ActionLink("Details", "Details", new { id = item.EnrollId }, new {@class="btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.EnrollId }, new  {@class="btn btn-warning" })
        </td>
    </tr>
}

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>


